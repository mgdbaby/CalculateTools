<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--选择器的默认颜色-->
    <item android:color="@color/text_blue_normal" android:state_enabled="true" android:state_focused="false" android:state_pressed="false" />
    <!--控件是否接受触摸或者点击事件时的颜色,false不接受-->
    <item android:color="@color/text_blue_pressed" android:state_enabled="false" />
    <!--是否按下，如一个按钮触摸或者点击,true按下-->
    <item android:color="@color/text_blue_pressed" android:state_pressed="true" />

</selector>