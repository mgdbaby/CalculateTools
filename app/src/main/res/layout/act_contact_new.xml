<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.amao.calculate.core.widget.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:right_text="保存"
        app:title_text="新建联系人" />

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/title_bar"
        android:layout_margin="15dp"
        android:src="@drawable/def_head" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_head"
        android:layout_toEndOf="@+id/img_head"
        android:background="@null"
        android:hint="姓名"
        android:padding="5dp"
        android:textSize="14sp" />

    <View
        android:id="@+id/line1"
        style="@style/line_view_common"
        android:layout_alignStart="@+id/edit_name"
        android:layout_below="@+id/edit_name"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/edit_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/line1"
        android:layout_below="@+id/line1"
        android:background="@null"
        android:hint="号码"
        android:inputType="number"
        android:padding="5dp"
        android:textSize="14sp" />

    <View
        android:id="@+id/line2"
        style="@style/line_view_common"
        android:layout_alignStart="@+id/edit_name"
        android:layout_below="@+id/edit_mobile"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_marginStart="20dp"
        android:text="注：号码非必填项"
        android:textColor="@color/red"
        android:textSize="10sp" />

</RelativeLayout>
