<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item"
    android:background="@drawable/xml_selector_item_select"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/text_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48.33dp"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="220dp"
        android:singleLine="true"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size"
        tools:text="张三" />

    <ImageView
        android:id="@+id/img_contact"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="15dp"
        android:button="@null"
        android:clickable="false"
        android:src="@drawable/xml_selector_check_contact" />

    <TextView
        android:id="@+id/text_contact_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_contact_name"
        android:layout_below="@id/text_contact_name"
        android:layout_marginTop="3dp"
        android:text="号码"
        android:textColor="@color/hint_color"
        android:textSize="@dimen/text_size_s" />

    <TextView
        android:id="@+id/text_contact_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_contact_name"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/text_contact_type"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/hint_color"
        android:textSize="@dimen/text_size_s"
        tools:text="13123123123" />

    <View
        android:id="@+id/line_divider"
        style="@style/line_view_common"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/text_contact_name" />

</RelativeLayout>